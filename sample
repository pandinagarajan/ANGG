class User
{
constructor(firstname,lastname,credit)
{
this.firstname=firstname
this.lastname=lastname
this.credit=credit
}
getFullname()
{
    let fullname=`${this.firstname} ${this.lastname} is my fullname`;
    return fullname;
}
editname(newname)
{
let myname=newname.split('')
this.firstname=myname[0]
this.lastname=myname[1]

}
}
let pandi = new User("pandi","nagarajan",34)
//console.log(pandi);
//console.log(pandi.getFullname());
pandi.editname("pandii nagarajan");
console.log(pandi.getFullname());
